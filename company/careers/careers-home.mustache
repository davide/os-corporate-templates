<div class="content-layout-simplify">
    <div class="container">
        <div class="row">
            <div>
                <div class="span12">
                    <h2>Job Openings</h2>
                </div>
            </div>

            {{#.}} {{#if Details.length}}

            <div class="span4">
                <span class="ListRecords"></span>

                <div style="background-color:#f2f2f2;padding:0 25px;">
                    <span class="ListRecords"></span>

                    <h4 style="line-height:55px;"><span class=
                    "ListRecords">{{Location}}</span></h4>
                </div>

                <div style="padding:0 25px;">
                    <span class="ListRecords"><span class=
                    "ListRecords">{{#Details}}</span></span>

                    <div>
                        <span class="ListRecords"><a href=
                        "http://www.outsystems.com/company/careers/p/1/us/{{JobTitle}}">
                        <p><span class=
                        "ListRecords">{{JobTitle}}</span></p></a></span>
                    </div><span class="ListRecords"></span>

                    <div style="color: #808080;margin-top: -10px;">
                        <span class="ListRecords"></span>

                        <p><span class=
                        "ListRecords">{{SmallDescription}}</span></p>
                    </div><span class="ListRecords">{{/Details}}</span>
                </div>
            </div>

            {{/if}} {{/.}}
        
        </div>
    </div>
</div>
<div style="background-color: #f2f2f2">
  <div class="container" style="margin-bottom: -70px; %WEB% margin-top: 50px; %/WEB% %MOBILE% margin-top: 10px; %/MOBILE%">
    <div class="row">
      <div class="span8">
        <h3 style="%WEB%margin: 90px 65px;%/WEB% %MOBILE% margin: 20px 10px; %/MOBILE%">
          We work hard but we also know how to have fun.
          <br />
          Check out our summer event video!
        </h3>
      </div>
      <div class="span4" style="margin: 25px 0;">
        <iframe allowfullscreen="" frameborder="0" height="200" src="http://www.youtube.com/embed/oM1Ddu6JAmo?rel=0&amp;hd=1" width="100%"></iframe>
      </div>
    </div>
  </div>
</div>